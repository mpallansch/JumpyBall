<?xml version='1.0' encoding='utf-8'?>
<widget id="com.comli.exampleproject" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <access origin="*" />
    <content src="index.html" />
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
    <name>Jumpy Ball</name>
    <description>
        A fun interactive game in which you jump a ball!
    </description>
    <author email="matt_pallansch@hotmail.com" href="https://www.linkedin.com/in/matthew-pallansch-845270ba">
        Matthew Pallansch
    </author>
    <preference name="permissions" value="none" />
    <preference name="orientation" value="potrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <icon src="icon.png" />
    <icon gap:density="ldpi" gap:platform="android" src="res/icon/android/JBIcon36.png" />
    <icon gap:density="mdpi" gap:platform="android" src="res/icon/android/JBIcon48.png" />
    <icon gap:density="hdpi" gap:platform="android" src="res/icon/android/JBIcon72.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="res/icon/android/JBIcon96.png" />
    <icon gap:platform="ios" height="57" src="res/icon/ios/JBIcon57.png" width="57" />
    <icon gap:platform="ios" height="72" src="res/icon/ios/JBIcon72.png" width="72" />
    <icon gap:platform="ios" height="114" src="res/icon/ios/JBIcon114.png" width="114" />
    <icon gap:platform="ios" height="144" src="res/icon/ios/JBIcon144.png" width="144" />
    <access origin="http://127.0.0.1*" />
</widget>
